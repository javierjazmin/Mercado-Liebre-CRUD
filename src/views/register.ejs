<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de registro' }) %>

    <body>
        <!-- Header -->
        <%- include('partials/headerNavbar') %>
            <!-- /Header -->

            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Formulario de Registro</h2>
                    </div>
                </div>
                <% if(locals.errors) { %>
                    <% for(let oneError in errors) {%>
                        <p>
                            <%= errors[oneError].msg %>
                        </p>
                        <% } %>
                            <% } %>
                                <div class="col-12">
                                    <form action="/users/register" method="POST" enctype="multipart/form-data">
                                        <div class="row product-detail">
                                            <div class="col-12 col-md-6">
                                                <label for="name" class="form-label">Nombre completo:</label>
                                                <input type="text" id="name" name="name" placeholder="nombreCompleto"
                                                    class="form-input">
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <label for="price" class="form-label">Password:</label>
                                                <input type="password" id="password" name="password"
                                                    placeholder="password" class="form-input">
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <label for="discount" class="form-label">Email:</label>
                                                <input type="email" id="email" name="email"
                                                    placeholder="javier@tumail.com" class="form-input">
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <label for="agregarImagen" class="form-label">Agregar Imagen:</label>
                                                <input type="file" id="image" name="avatar" class="form-input">
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <label for="category" class="form-label">Pa√≠s de Nacimiento:</label>
                                                <select name="pais" id="pais" class="form-input">
                                                    <% let paises=[ 'Argentina' , 'Bolivia' , 'Brasil' , 'Chile'
                                                        , 'Colombia' , 'Paraguay' , 'Peru' , 'Uruguay' , 'Venenzuela' ]
                                                        %>
                                                        <% for (const unPais of paises) {%>

                                                            <option value="<%= unPais %>">
                                                                <%= unPais %>
                                                            </option>
                                                            <% } %>
                                                </select>
                                            </div>
                                            <div class="col-12">
                                                <button type="submit" class="buy-now-button">Enviar</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

            </div>
            <!-- /todos los productos -->

            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->
    </body>

</html>